{
  "appId": "com.github.pschild.imagemanagementtool",
  "productName": "Image Management Tool",
  "directories": {
    "output": "release"
  },
  "files": [
    {
      "from": "dist/client",
      "to": "client"
    },
    {
      "from": "dist/server",
      "to": "server"
    },
    {
      "from": "dist/electron",
      "to": "electron"
    },
    {
      "from": "dist/shared",
      "to": "shared"
    },
    ".env",
    "ormconfig.json"
  ],
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "win": {
    "icon": "dist/client",
    "target": [
      "nsis"
    ]
  },
  "mac": {
    "icon": "dist/client",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/client",
    "target": [
      "AppImage"
    ]
  },
  "publish": [
    {
      "provider": "github",
      "owner": "pschild",
      "repo": "image-management-tool",
      "releaseType": "release"
    }
  ]
}